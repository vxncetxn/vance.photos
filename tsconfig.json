{
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/pages/*": ["src/pages/*"],
            "@/components/*": ["src/components/*"],
            "@/styles/*": ["src/styles/*"],
            "@/public/*": ["public/*"],
            "@/scripts/*": ["src/scripts/*"],
            "@/data/*": ["src/data/*"],
            "@/shaders/*": ["src/shaders/*"],
            "@/types/*": ["src/types/*"]
        }
    }
}
